<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".question4">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Question 4"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="32dp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/img"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/img_3"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="4dp"
        android:text="Laquelle de ces ethnies n'est pas d'origine berbÃ¨re marocaine ?"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/idRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            >

            <!--on below line we are creating a radio buttons-->
            <RadioButton
                android:id="@+id/idQcm1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Les Chleuhs"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/idQcm2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Les Rifains"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/idQcm3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Les Mozabites"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/idQcm4"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Les Zayanes"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RadioGroup>

        <Button
            android:id="@+id/nextbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/colorPrimary"
            android:drawableEnd="@drawable/flech"
            android:text="NEXT" />


    </LinearLayout>


</LinearLayout>